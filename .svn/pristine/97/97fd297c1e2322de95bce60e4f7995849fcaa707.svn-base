                                }
                            }
                        }
                    }

                    $creatorDoc = Relation::getNickName($vv['admin_id']);//查找创建人员
                    $docList[$kk]['creator'] = isset($creatorDoc) ? ['admin_id' => $vv['admin_id'], 'nickname' => $creatorDoc] : [];
