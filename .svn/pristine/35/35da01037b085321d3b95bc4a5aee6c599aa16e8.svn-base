    /**
     * 物料审核人新增
     * @param $data
     * @return array|false
     */
    public static function setMaterialAuditor($data)
    {
        //清空物料审核人信息
        Db::name('relation')->where(['target_type' => self::MATERIAL_AUDIT_TYPE,'audit_order' => $data['audit_order']])->delete();

        foreach ($data['auditor_ids'] as $key => $auditor) {
            $audit_info[$key] = [
                'target_id' => 0,
                'target_type' =>  self::MATERIAL_AUDIT_TYPE,
                'audit_order' => $data['audit_order'],
                'role_type' => 5,
                'admin_id' => $auditor
            ];
        }

        return (new Relation)->saveAll($audit_info);
    }

    /**
     * 获取审核人列表
     * @param $type
     * @return string
     */
    public static function getAuditorList($type)
    {
        if($type !== false) {
            $audit_info = Db::name('relation')->where(['target_type' => self::MATERIAL_AUDIT_TYPE, 'audit_order' => $type])->select();
        } else {
            $audit_info = Db::name('relation')->where(['target_type' => self::MATERIAL_AUDIT_TYPE])->select();
        }
        $auditor = '';
        if (!empty($audit_info)) {
            foreach ($audit_info as $k => $audit) {
                $nickname = self::initConnect()
                    ->name('admin')
                    ->where('admin_id', $audit['admin_id'])
                    ->value('nickname');

                $auditor['auditors'][$k] = [
                    'admin_id' => $audit['admin_id'],
                    'nickname' => $nickname,
                    'type' => $type,
                    'audit_order' => $audit['audit_order']
                ];
            }
        }

        return $auditor;
    }

